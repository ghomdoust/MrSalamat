<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBackground"
    android:gravity="center"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_marginBottom="50dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/siahati_background"
                    android:scaleType="centerCrop"
                    >

                </ImageView>

                <TextView
                    android:fontFamily="@font/sans_num_bold"
                    android:id="@+id/tourism_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="اماکن سیاحتی"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10sp"
                    android:background="@drawable/shape_button"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/pilgirims_background"
                    android:scaleType="centerCrop"
                    >

                </ImageView>

                <TextView
                    android:fontFamily="@font/sans_num_bold"
                    android:id="@+id/tv_cartoons"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="اماکن زیارتی"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10sp"
                    android:background="@drawable/shape_button"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/tourism_background"
                    android:scaleType="centerCrop"
                    >

                </ImageView>

                <TextView
                    android:fontFamily="@font/sans_num_bold"
                    android:id="@+id/tourism_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="مجتمع های تفریحی"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10sp"
                    android:background="@drawable/shape_button"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/shopping_background"
                    android:scaleType="centerCrop"
                    >

                </ImageView>

                <TextView
                    android:fontFamily="@font/sans_num_bold"
                    android:id="@+id/tourism_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="مجتمع های تجاری"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10sp"
                    android:background="@drawable/shape_button"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/resturant_background"
                    android:scaleType="centerCrop"
                    >

                </ImageView>

                <TextView
                    android:fontFamily="@font/sans_num_bold"
                    android:id="@+id/tourism_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="رستورانها"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10sp"
                    android:background="@drawable/shape_button"
                    >

                </TextView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
